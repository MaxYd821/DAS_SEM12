@{
}
@model DAS_SEM12.Models.Usuario;
<h2>
    Eliminar Usuario
</h2>
<p>
    ¿Estás seguro que desea eliminar el usuario
    <strong>
        @Model.Nombre
    </strong>
    ?
</p>
<form asp-controller="Usuario" asp-action="ConfirmacionEliminar" method="post">
    <input type="hidden" name="id" value="@Model.idUsuario" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-controller="Usuario" asp-action="Mostrar" class="btn btn-secondary">
        Cancelar
    </a>
</form>
