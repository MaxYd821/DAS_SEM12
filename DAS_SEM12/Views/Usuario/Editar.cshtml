@{
}
@model DAS_SEM12.Models.Usuario;
@{
    var roles = ViewBag.Roles as List<DAS_SEM12.Models.Rol>;
}
<div>
    <div>
        <div>
            Editar usuario
        </div>
        @if (ViewData["mensaje"] != null)
        {
            <p style="color:red;">@ViewData["mensaje"]</p>
        }
        <div>
            <form asp-action="Editar" asp-controller="Usuario" method="post">
                <input asp-for="idUsuario" type="hidden" />
                <input asp-for="Nombre" placeholder="Nombre" required />
                <br />
                <input asp-for="Apellido" placeholder="Apellido" required />
                <br />
                <input asp-for="correo" placeholder="Correo" required />
                <br />
                <input asp-for="password" placeholder="Contraseña" type="password" required />
                <br />
                <select asp-for="idRol" required>
                    <option value="">Selecciona un rol</option>
                    @foreach (var rol in roles)
                    {
                        <option value="@rol.idRol">@rol.Nombre</option>
                    }
                </select>
                <br />
                <div>
                    <button type="submit">
                        Guardar
                    </button>
                </div>
                <a asp-controller="Usuario" asp-action="Mostrar">
                    Volver
                </a>
            </form>
        </div>
    </div>
</div>
