@{
}
@model DAS_SEM12.Models.Rol;
<h2>
    Crear Rol
</h2>
<form asp-controller="Rol" asp-action="Editar" method="post">
    <input type="hidden" asp-for="idRol"/>
    <div>
        <input type="text" asp-for="Nombre" placeholder="Nombre del rol" required />
        <br />
        <br />
        <input type="text" asp-for="Descripcion" placeholder="Descripción del rol" required />
    </div>
    <div>
        <button type="submit">
            Guardar
        </button>
        <br />
        <a asp-controller="Rol" asp-action="Index">
            Volver
        </a>
    </div>
</form>
