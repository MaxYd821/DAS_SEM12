@{
}
@model IEnumerable<DAS_SEM12.Models.Rol>;
<h2>
    Lista de Roles
</h2>
<a asp-controller="Rol" asp-action="Crear">
    Nuevo Rol
</a>
<table>
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Nombre
            </th>
            <th>
                Descripción
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rol in Model)
        {
            <tr>
                <td>
                    @rol.idRol
                </td>
                <td>
                    @rol.Nombre
                </td>
                <td>
                    @rol.Descripcion
                </td>
                <td>
                    <a asp-controller="Rol" asp-action="Editar" asp-route-id="@rol.idRol">
                        Editar
                    </a>
                    <a asp-controller="Rol" asp-action="Eliminar" asp-route-id="@rol.idRol">
                        Eliminar
                    </a>
                </td>
            </tr>    
        }
    </tbody>
</table>
